@model Delpin_Booking.Models.Order

@{
    ViewData["Title"] = "Book";
}

@if (User.IsInRole("Admin"))
{
    <h1>Book</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <div class="form-group">
                <label asp-for="RessourceId" class="control-label"></label>
                <input asp-for="RessourceId" class="form-control" value="@Model.RessourceId" readonly="readonly" />
                <span asp-validation-for="RessourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="@DateTime.Today" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingStart" class="control-label"></label>
                <input asp-for="BookingStart" class="form-control" />
                <span asp-validation-for="BookingStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingEnd" class="control-label"></label>
                <input asp-for="BookingEnd" class="form-control" />
                <span asp-validation-for="BookingEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value="@Convert.ToInt32(Model.Price)" readonly="readonly" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
        }